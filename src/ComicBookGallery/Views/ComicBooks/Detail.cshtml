@model ComicBookGallery.Models.ComicBook

@{
    ViewBag.Title = "Comic Book Detail";
    ViewBag.Show_backbar = true;
}

<h2>@Model.DisplayText</h2>

<div class="row">
    <div class="col-md-6">
        <div class="well">
            <h5><label>Series Title:</label> @Model.SeriesTitle</h5>
            <h5><label>Issue #:</label> @Model.SeriesNumber</h5>
            <h5><label>Favorite:</label> @(Model.Favourite ? "Yes" : "No")</h5>
            @if (Model.Artists.Length > 0) {
                <h5>Artists:</h5>
                <div>
                    <ul>
                        @foreach (var artist in Model.Artists)
                        {
                            <li><span style="width: 5em; display:inline-block;">@artist.Role:</span> @artist.Name</li>
                        }
                    </ul>
                </div>
            }
        </div>
        <h5>Description</h5>
        <p>@Html.Raw(Model.DescriptionHtml)</p>
    </div>
    <div class="col-md-6">
        <img src="~/Images/@Model.CoverImageFileName"
             alt="@Model.DisplayText" class="img-responsive" />
    </div>
</div>
